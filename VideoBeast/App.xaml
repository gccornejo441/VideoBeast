<Application
	x:Class="VideoBeast.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:VideoBeast">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

				<!--  your app resources  -->
				<ResourceDictionary>

					<!--  Card surfaces  -->
					<SolidColorBrush x:Key="Card" Color="#1AFFFFFF" />
					<SolidColorBrush x:Key="Card2" Color="#12FFFFFF" />
					<SolidColorBrush x:Key="Stroke" Color="#28FFFFFF" />
					<SolidColorBrush x:Key="StrokeStrong" Color="#36FFFFFF" />

					<!--  Accent  -->
					<SolidColorBrush x:Key="Accent" Color="#FF2B6BFF" />
					<SolidColorBrush x:Key="AccentSoft" Color="#332B6BFF" />

					<!--  Text  -->
					<SolidColorBrush x:Key="TextSoft" Color="#CCFFFFFF" />
					<SolidColorBrush x:Key="TextFaint" Color="#99FFFFFF" />

					<!--  Used by SettingsPage "Save" button  -->
					<Style x:Key="AccentButtonStyle" TargetType="Button">
						<Setter Property="Background" Value="{StaticResource Accent}" />
						<Setter Property="Foreground" Value="White" />
						<Setter Property="BorderBrush" Value="{StaticResource StrokeStrong}" />
						<Setter Property="BorderThickness" Value="1" />
						<Setter Property="Padding" Value="12,8" />
						<Setter Property="CornerRadius" Value="10" />
					</Style>
				</ResourceDictionary>

			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
